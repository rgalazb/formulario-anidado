<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>
<hr>

<%= form_with(model: [@post, Comment.new], local: true) do |f| %>
   <%= f.text_area :content %>
   <%= f.submit :enviar %>
<% end %>

<ul>
  <% @comments.each do |comment| %>
    <li> <%= comment.content %></li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
